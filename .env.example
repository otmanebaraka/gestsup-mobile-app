# GestSup Mobile App Environment Configuration

# Database Configuration (MariaDB)
DB_HOST=gestsup-db
DB_PORT=3306
DB_NAME=gestsup
DB_USER=gestsup
DB_PASSWORD=gestsup_password_change_me
DB_ROOT_PASSWORD=root_password_change_me

# API Configuration
NODE_ENV=development
API_PORT=3000
WEBSOCKET_PORT=3001
JWT_SECRET=your_jwt_secret_change_me
JWT_EXPIRE=24h

# GestSup Configuration
GESTSUP_URL=http://gestsup-app
GESTSUP_API_KEY=your_gestsup_api_key

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Push Notifications (Firebase Cloud Messaging)
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id
FCM_PROJECT_ID=your_firebase_project_id

# WebSocket Configuration
WS_CORS_ORIGIN=*
WS_MAX_CONNECTIONS=1000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
HASH_ROUNDS=12
SESSION_SECRET=your_session_secret

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Redis Configuration (Optional - for scaling)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Development
DEBUG=gestsup:*
HOT_RELOAD=true